{
  "builders": [
    {
      "name": "ubuntu-18.04",
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "tools_upload_flavor": "linux",
      "headless": true,

      "iso_url": "http://cdimage.ubuntu.com/releases/18.04/release/ubuntu-18.04-server-amd64.iso",
      "iso_checksum": "a7f5c7b0cdd0e9560d78f1e47660e066353bb8a79eb78d1fc3f4ea62a07e6cbc",
      "iso_checksum_type": "sha256",

      "ssh_port": 22,
      "ssh_timeout": "15m",
      "ssh_username": "david",
      "ssh_password": "ubuntu",
      "ssh_wait_timeout": "30m",

      "vnc_disable_password": true,

      "disk_type_id": "thin",
      "disk_size": "8000",

      "floppy_files": [
        "packer/ubuntu-18.04/preseed.cfg"
      ],

      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz ",
        "auto ",
        "console-setup/ask_detect=false ",
        "console-setup/layoutcode=us ",
        "console-setup/modelcode=SKIP ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "netcfg/get_domain=vm ",
        "netcfg/get_hostname={{ build_name }} ",
        "grub-installer/bootdev=/dev/sda ",
        "noapic ",
        "preseed/file=/floppy/preseed.cfg ",
        "-- ",
        "<enter>"
      ],

      "shutdown_command": "sudo systemctl poweroff",

      "remote_type": "esx5",
      "remote_host": "{{user `packer_vsphere_host`}}",
      "remote_datastore": "{{user `packer_vsphere_datastore`}}",
      "remote_username": "{{user `packer_vsphere_username`}}",
      "remote_password": "{{user `packer_vsphere_password`}}",
      "keep_registered": "true",
      "skip_export": "true",

      "output_directory": "{{ build_name }}-template",
      "vm_name": "{{ build_name }}-template",
      "vmdk_name": "{{ build_name }}-template",

      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "4",

        "ethernet0.networkName": "VM Network"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vsphere-template",
      "host": "{{user `vcenter_host`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "packer/ubuntu-18.04/playbook.yml",
      "user": "david",
      "extra_arguments": ["--extra-vars", "ssh_public_key_path={{user `ssh_public_key_path`}} ansible_python_interpreter=/usr/bin/python3"]
    }
  ],
  "variables": {
    "vcenter_host": "",
    "vcenter_password": "",
    "vcenter_username": "",
    "packer_vsphere_datastore": "",
    "packer_vsphere_host": "",
    "packer_vsphere_password": "",
    "packer_vsphere_username": "",
    "ssh_public_key_path": "~/.ssh/id_rsa.pub"
  }
}
