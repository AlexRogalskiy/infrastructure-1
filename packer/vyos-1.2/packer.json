{
  "builders": [
    {
      "name": "vyos-1.2",
      "type": "vsphere-iso",

      "vcenter_server": "{{user `vcenter_host`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `packer_vsphere_host`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "insecure_connection": true,

      "vm_name": "{{ build_name }}",
      "guest_os_type": "debian8_64Guest",
      "ssh_username": "david",
      "ssh_password": "vyos",

      "CPUs": 4,
      "RAM": 2048,
      "disk_thin_provisioned": true,
      "disk_size": "4",
      "network": "LAN",

      "iso_paths": [
        "[{{user `vcenter_datastore`}}] iso/vyos-1.2.0-rolling+201809020337-amd64.iso"
      ],

      "boot_command": [
        "<enter><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "install image<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "Yes<enter><wait>",
        "<enter><wait10>",
        "<enter><wait10>",
        "<enter><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "<enter><wait10>",
        "sudo sed -i 's/reboot -d -f -i/eject -m cdrom\\n\\treboot -d -f -i/' /etc/init.d/reboot<enter><wait>",
        "reboot<enter><wait>",
        "Yes<enter><wait10><wait10><wait10><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "configure<enter><wait>",
        "set system login user david authentication plaintext-password vyos<enter><wait>",
        "set system login user david level admin<enter><wait>",
        "commit<enter><wait>",
        "save<enter><wait>",
        "exit<enter><wait>",
        "reboot<enter><wait>",
        "Yes<enter><wait10><wait10><wait10><wait10>",
        "david<enter><wait>",
        "vyos<enter><wait>",
        "sudo mount /dev/fd0 /media<enter><wait>",
        "/media/BASE.SH<enter><wait10>",
        "reboot<enter><wait>",
        "Yes<enter><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>"
      ],

      "floppy_files": [
        "packer/vyos-1.2/scripts/base.sh"
      ],

      "boot_order": "disk,cdrom",

      "convert_to_template": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/Users/david/.ssh/id_rsa.pub",
      "destination": "/tmp/id_rsa.pub"
    },
    {
      "scripts": [
        "packer/vyos-1.2/scripts/cleanup.sh",
        "packer/vyos-1.2/scripts/users.sh"
      ],
      "type": "shell"
    }
  ]
}
